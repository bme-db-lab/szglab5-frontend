<div class="entry-test-creator">
  <div class="text label">Lab</div>
  <div class="lab-chooser">
    {{#power-select options=model.languages onchange=(action "selectLab") selected=entryTest.language as |lab|}} {{lab.name}}
    {{/power-select}}
  </div>

  <div class="text label">Név</div>
  {{input type="text" value=entryTest.title placeholder="beugró neve"}}

  {{#if edit}}
    <div class="text label">Kérdések</div>
    {{#each entryTest.questions as |question|}}
      {{textarea value=question.text placeholder="kerdés szövege" disabled=question.isNotEditing}}
      {{#if question.isNotEditing}}
        <button type="button" {{action 'editQuestion' question}}>edit</button>
        <button type="button" {{action 'removeQuestion' question}}>-</button>
      {{else}}
        <button type="button" {{action 'saveQuestion' question}}>save</button>
      {{/if}}
      <div class="clear"></div>
    {{/each}}
    <button type="button" {{action 'addQuestion'}}>+</button>
    <div class="clear"></div>
  {{/if}}

  <button type="button" {{action 'saveSettings'}}>Mentés</button>

  {{#if edit}}
    <button type="button" class="cancel" {{action 'closeSettings'}}>Cancel</button>
  {{/if}}
</div>
