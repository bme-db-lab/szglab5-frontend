<div class="left">
  <div class="title">{{title}}</div>
  <div class="submenu">
    <ul>
      {{#each subMenu as |menu|}}
        <li>
          <a class="submenu-text {{if (eq menu.key currentView) 'active'}}" {{action 'goToView' menu.key}}>
            {{menu.description}}
          </a>
        </li>
      {{/each}}
    </ul>
  </div>
</div>
