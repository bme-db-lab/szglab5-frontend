<div class="login">
  <form class="top {{if hasError 'error'}}">
    {{#auto-focus}}
      {{input type="text" value=username placeholder="username" enter='removeError' autofocus="autofocus" }}
    {{/auto-focus}}
    {{input type="password" value=password placeholder="password" }}
    <button type="submit" name="button" {{action 'login'}}>Login</button>
    {{#if error}}
    <div class="error-box">
      {{error}}
    </div>
    {{/if}}
  </form>

  <div class="bottom">
    <button type="button" name="button" {{action 'loginBMERedirect'}}>Login using my Edu ID</button>
    {{#if errorShibboleth}}
    <div class="error-box">
      {{errorShibboleth}}
    </div>
    {{/if}}
  </div>

</div>
