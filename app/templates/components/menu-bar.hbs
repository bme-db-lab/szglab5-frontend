<div class="logo" title="laboradmin"><img src="assets/images/logo.png"></div>
<ul>
  <!-- USER ROLE CHOOSER-->
  <li title='felhasználó modul váltása'>
    <select onchange={{action "changeUserRight" value="target.value"}} selected=current>
      {{#each userRightLabels as |userright|}}
        <option value={{userright.key}}>{{userright.value}}</option>
      {{/each}}
    </select>{{!-- {{#power-select options=userRightLabels onchange=(action "changeUserRight") as |userright|}}
    {{userright.value}}
      {{/power-select}} {{!-- {{#power-select options=userRights onchange=(action "changeUserRight") as |userright|}}
      {{userright}}
        {{/power-select}} --}}
  </li>

  <!-- LEFT MENU ITEMS-->
  {{#if (eq currentRight 'admin')}}
    {{#each adminMenu as |menuitem|}}
      <li class='min-width' title= {{menuitem.value}}>
        {{#link-to menuitem.key tagName='button' class=menuitem.icon }} {{menuitem.value}}{{/link-to}}
      </li>
    {{/each}}
  {{/if}}
  {{#if (eq currentRight 'evaluator')}}
    {{#each evaluatorMenu as |menuitem|}}
      <li class='min-width' title= {{menuitem.value}}>
        {{#link-to menuitem.key tagName='button' class=menuitem.icon }} {{menuitem.value}}{{/link-to}}
      </li>
    {{/each}}
  {{/if}}
  {{#if (eq currentRight 'demonstrator')}}
    {{#each demonstratorMenu as |menuitem|}}
      <li class='min-width' title= {{menuitem.value}}>
        {{#link-to menuitem.key tagName='button' class=menuitem.icon }} {{menuitem.value}}{{/link-to}}
      </li>
    {{/each}}
  {{/if}}
  {{#if (eq currentRight 'student')}}
    {{#each studentMenu as |menuitem|}}
      <li class='min-width' title= {{menuitem.value}}>
        {{#link-to menuitem.key tagName='button' class=menuitem.icon }} {{menuitem.value}}{{/link-to}}
      </li>
    {{/each}}
  {{/if}}

  <!-- RIGHT MENU ITEMS-->
  <li class='right'>
    <button class='sign-out' title='kijelentkezés'></button>
  </li>
  <li class='right cogs'>
    {{#link-to 'settings' class='cogs' tagName='button' title='beállítások' }}{{/link-to}}
  </li>
  <li class='right'>
    <div class="menu-text user">{{username}}</div>
  </li>
</ul>
