<div class='student-laboratory'>
  <h4>Helyszín</h4>
  <p>{{result.location}}</p>
  <h4>Időpont</h4>
  <p>{{dateformat result.date}}</p>
  <h4>Laborvezető</h4>
  <p>{{await result.Demonstrator.displayName}} ({{await result.Demonstrator.email}})</p>
  {{#each result.Deliverables as |Deliverable number|}}
    {{#if (eq Deliverable.DeliverableTemplate.type 'BEUGRO')}}
    <h4>{{Deliverable.DeliverableTemplate.description}} érdemjegye:</h4>
    <p>{{Deliverable.grade}}</p>
    {{/if}}
    {{#if (eq Deliverable.DeliverableTemplate.type 'GIT_REPO')}}
      {{#if Deliverable.isOver}}
      <h4>{{Deliverable.DeliverableTemplate.description}} feltöltve:</h4>
      <p>{{dateformat Deliverable.submittedDate}}</p>
      <h4>{{Deliverable.DeliverableTemplate.description}} érdemjegye:</h4>
      <p>{{Deliverable.grade or 'Még nincs értékelve.'}}</p>
      <h4>{{Deliverable.DeliverableTemplate.description}} megjegyzés:</h4>
      <p>{{Deliverable.comment}}</p>
      {{else}}
      <h4>{{Deliverable.DeliverableTemplate.description}} határidő:</h4>
      <p>{{dateformat Deliverable.deadline}}</p>
      {{/if}}
      <h4>Git:</h4>
      <p>{{Deliverable.url}}</p>
      <div class="tagSelector">
        {{#power-select options=Deliverable.commits selected=Deliverable.commit onchange=(action "selectCommit" Deliverable) as |commit|}}
        {{commit}}
        {{/power-select}}
      </div>
      {{#if Deliverable.success}}
        <div class="success-box">Sikeres mentés.</div>
      {{/if}}
      {{#if Deliverable.fail}}
        <div class="error-box">Sikertelen mentés.</div>
      {{/if}}
    {{/if}}
    {{#if (eq Deliverable.DeliverableTemplate.type 'LABOR')}}
      {{#if Deliverable.isOver}}
      <h4>{{Deliverable.DeliverableTemplate.description}} érdemjegye:</h4>
      <p>{{Deliverable.grade or 'Még nincs értékelve.'}}</p>
      <h4>{{Deliverable.DeliverableTemplate.description}} megjegyzés:</h4>
      <p>{{Deliverable.comment}}</p>
      {{/if}}
    {{/if}}
  {{/each}}
</div>
