<div class= {{addClass}}>
  <table>
    <thead>
      {{#unless withoutNumber}}
        <th>#</th>
      {{/unless}}
      {{#each header as |head|}}
        <th>{{head}}</th>
      {{/each}}
      {{#if withSettings}}
        <th>
        </th>
      {{/if}}
      {{#if withImpersonate}}
        <th>
        </th>
      {{/if}}
    </thead>
    <tbody>
      {{#each body as |row number|}}
        <tr class='normal{{if clickable " clickable"}}' {{action 'onRowClick' (get-array-element body number)}}>
          {{#unless withoutNumber}}
            <th scope='row'>{{add number}}</th>
          {{/unless}}
          {{#each row as |cell|}}
            <td>{{cell}}</td>
          {{/each}}
          {{#if withSettings}}
            <td>
              <button type="button" class='cog' {{action 'openSettings' row}} title="szerkesztés"></button>
            </td>
          {{/if}}
          {{#if withImpersonate}}
            <td>
              <button type="button" class='user-secret' {{action 'impersonate' row}} title="megszemélyesítés"></button>
            </td>
          {{/if}}
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
