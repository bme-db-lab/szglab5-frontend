<div class="content evaluator">
  <div class="left">
    <div class="title">Javító</div>
    <div class="submenu">
      <ul>
        {{#each subMenu as |menu|}}
          <li>
            <a class="submenu-text {{if (eq menu.key currentView) 'active'}}" {{action 'goToView' menu.key}}>
              {{menu.description}}
            </a>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="right">
    <div class="evaluator">
      {{#unless evaluate}}
        {{evaluation-group currentLab=lab1 evaluateStudent=(action 'evaluateStudent')}}
      {{/unless}}
      {{#if evaluate}}
        {{evaluation-student student=evaluate mode='evaluator' cancel=(action 'cancel')}}
      {{/if}}
    </div>
  </div>
</div>
