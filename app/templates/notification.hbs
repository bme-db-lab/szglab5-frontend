<div class="content notification">
  <div class="left">
    <div class="title">Hirdetm√©nyek</div>
    <div class="submenu">
      <ul>
        {{#each subMenu as |menu|}}
          <li>
            <a class="submenu-text {{if (eq menu.key currentView) 'active'}}" {{action 'goToView' menu.key}}>
              {{menu.description}}
            </a>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="right">
    <div class="notification">
      {{#if (eq currentView 'creator')}}
        {{notifications-creator}}
      {{else}}
        {{notifications-view}}
      {{/if}}
    </div>
  </div>
</div>
