<div class="content settings">
  {{left-menu title="Beállítások" currentView=currentView goToView=(action 'goToView') subMenu=subMenu}}

  <div class='right'>
    <form class='settings'>
      {{#if (eq currentView 'email')}}
      <h4><label for="email">e-mail</label></h4>
      {{input type="email" value=model.email placeholder='e-mail' id='email'}}

      <h4><label for="mailinglist">mailing list</label></h4>
      <button type="button" class="btn--toggle {{if mailList 'active'}}" {{action 'toggleMailList'}} id="mailinglist">subscribe</button>

      <h4><label for="emailnotifications">e-mail notifications</label></h4>
      <button type="button" class="btn--toggle {{if notification 'active'}}" {{action 'toggleNotifications'}} id="emailnotifications">subscribe</button>
      {{/if}}
      {{#if (eq currentView 'password')}}

      <h4><label for="oldpassword">régi jelszó</label></h4>
      {{input type="password" value=user.oldpwd placeholder='régi jelszó' id='oldpassword'}}

      <h4><label for="newpassword">új jelszó</label></h4>
      {{input type="password" value=user.newpwd placeholder='új jelszó újra' id='newpassword'}}

      <h4><label for="newpassword2">új jelszó újra</label></h4>
      {{input type="password" value=user.newpwdagain placeholder='új jelszó' id="newpassword2"}}

      <h4><label for="sshkey">ssh publikus kulcs</label></h4>
      {{textarea value=model.sshPublicKey class="ssh" cols="9" rows="9" placeholder="ssh publikus kulcs" id='sshkey'}}
      {{/if}}
      {{#if (eq currentView 'style')}}
      <p>Changes now are just local.</p>
      <h4>Stílus</h4>
      {{#power-select options=styles selected=selectedStyle onchange=(action "changeStyle") as |style|}}
        {{style.value}}
      {{/power-select}}
      {{/if}}

      <button type="submit" {{action 'save'}}>Mentés</button>
    </form>
  </div>
</div>
